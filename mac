# # Install Homebrew
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

#
# # Brew
brew update --force

brew bundle --file=-<<EOF
tap "homebrew/services"
tap "homebrew/cask"

brew "git"
brew "openssl"
brew "the_silver_searcher"
brew "tmux"
brew "vim"
brew "zsh"
brew "postgresql"
brew "redis"
brew "fzf"
brew "fd"
brew "yarn"
brew "mas"
brew "tree"

# Casks
cask "google-chrome"
cask "iterm2"
cask "1password"
cask "dropbox"
cask "raycast"
cask "todoist"
cask "rectangle"
cask "cleanmymac"
cask "cron"
cask "rubymine"
cask "firefox"
cask "microsoft-edge"
EOF

# Mas-es

# Amphetemine
mas install 937984704
